<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM_DataGrid.MainPage"
             xmlns:dg="clr-namespace:Maui.DataGrid;assembly=Maui.DataGrid"
             xmlns:ViewModel ="clr-namespace:MVVM_DataGrid.ViewModel"
             x:DataType="ViewModel:MainPageViewModel"
             >

    <Grid>
        <!--Row Defs-->
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <!--Col Defs-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>

        <!--Heading 1-->
        <Label TextColor="White" Text="Surf Shop Example" Grid.Column="0" Grid.Row="0" Padding="10" FontSize="Medium"/>

        <!--Data Grid-->
        <dg:DataGrid Grid.Column="0" Grid.Row="1" x:Name="ShopView" ItemsSource="{Binding Cataloge}" RowHeight="70" HeaderHeight="50" BorderColor="DarkGrey" 
             HeaderBackground="DarkGoldenrod">
            <dg:DataGrid.Columns>
                <dg:DataGridColumn Title="Id" PropertyName="shopID" Width="150">
                    <dg:DataGridColumn.CellTemplate>
                        <DataTemplate>
                            <ContentView>
                                <Grid>
                                    <Label Text="{Binding ., FallbackValue='id'}" FontSize="Medium" TextColor="Black"/>
                                </Grid>
                            </ContentView>
                        </DataTemplate>
                    </dg:DataGridColumn.CellTemplate>
                </dg:DataGridColumn>
                <dg:DataGridColumn Title="Brand" PropertyName="brandName" >
                    <dg:DataGridColumn.CellTemplate>
                        <DataTemplate >
                            <ContentView>
                                <Label Text="{Binding ., FallbackValue='Brand Name'}" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center"/>
                            </ContentView>
                        </DataTemplate>
                    </dg:DataGridColumn.CellTemplate>
                </dg:DataGridColumn>
                <dg:DataGridColumn Title="Item Name" PropertyName="itemName" >
                    <dg:DataGridColumn.CellTemplate>
                        <DataTemplate>
                            <ContentView>
                                <Label Text="{Binding ., FallbackValue='Item Name'}" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center"/>
                            </ContentView>
                        </DataTemplate>
                    </dg:DataGridColumn.CellTemplate>
                </dg:DataGridColumn>
                <dg:DataGridColumn Title="In Cataloge" PropertyName="cataType" >
                    <dg:DataGridColumn.CellTemplate>
                        <DataTemplate>
                            <ContentView>
                                <Label Text="{Binding ., FallbackValue='In Cataloge'}" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center"/>
                            </ContentView>
                        </DataTemplate>
                    </dg:DataGridColumn.CellTemplate>
                </dg:DataGridColumn>
                <dg:DataGridColumn Title="Price" PropertyName="costPrice" >
                    <dg:DataGridColumn.CellTemplate>
                        <DataTemplate>
                            <ContentView>
                                <Label Text="{Binding ., FallbackValue='Cost Price'}" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center"/>
                            </ContentView>
                        </DataTemplate>
                    </dg:DataGridColumn.CellTemplate>
                </dg:DataGridColumn>
                <dg:DataGridColumn Title="2023 Cataloge Item" PropertyName="latestCata" >
                    <dg:DataGridColumn.CellTemplate>
                        <DataTemplate>
                            <ContentView>
                                <Label Text="{Binding ., FallbackValue='Latest Cataloge Y/N'}" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center"/>
                            </ContentView>
                        </DataTemplate>
                    </dg:DataGridColumn.CellTemplate>
                </dg:DataGridColumn>
            </dg:DataGrid.Columns>
            <dg:DataGrid.RowsBackgroundColorPalette>
                <dg:PaletteCollection>
                    <Color>white</Color>
                    <Color>white</Color>
                </dg:PaletteCollection>
            </dg:DataGrid.RowsBackgroundColorPalette>
        </dg:DataGrid>

        <!--Entry For Number Of Items-->
        <HorizontalStackLayout Grid.Column="0" Grid.Row="2">
            <Label Text="Purchase OR Stock"/>
            <Entry Placeholder="0" TextColor="Black" BackgroundColor="White"/>
        </HorizontalStackLayout>

        <!--Calc Btn-->
        <Button Text="Calculate" 
                Padding="20"
                Grid.Column="0"
                Grid.Row="3"
                Clicked="CalcItem"
                />

        <!--Heading 2-->
        <Label TextColor="White" Text="Payment Summary" Grid.Column="1" Grid.Row="0" Padding="10" FontSize="Medium"/>

        <!--Reciept OR Stock Report Summary-->
        <VerticalStackLayout Grid.Column="1" Grid.Row="1" Padding="10">
            <Label Text="Id Placeholder"/>
            <Label Text="Name Placeholder"/>
            <Label Text="Type Placeholder"/>
            <Label Text="2023 Y/N Placeholder"/>
            <Label Text="Total Quantity Placeholder"/>
            <Label Text="Cost Price Placeholder"/>
            <Label Text="Gross After Tax Placeholder"/>
            <Label Text="Tax Paid Placeholder"/>
            <Label Text="Date Placeholder"/>
            <Label Text="Time Placeholder"/>
        </VerticalStackLayout>

        <!--Saved file feedback-->
        <HorizontalStackLayout Grid.Column="1" Grid.Row="2" Padding="10">
            <Label Text="Records saved yes/no placeholder"/>
        </HorizontalStackLayout>

        <!--Save Payslip Btn-->
        <Button Text="Save" 
                Padding="20"
                Grid.Column="1"
                Grid.Row="3"
                />

    </Grid>

</ContentPage>
